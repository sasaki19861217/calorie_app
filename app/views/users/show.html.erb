<h1><%= t '.title' %></h1>
<p>Find me in app/views/users/show.html.erb</p>
<table class="table">
  <tbody>
    <tr>
        <th><%= User.human_attribute_name('name') %></th>
        <td><%= @user.name %></td>
    </tr>
    <tr>
        <th><%= User.human_attribute_name('email') %></th>
        <td><%= @user.email %></td>
    </tr>
    <tr>
        <th><%= User.human_attribute_name('birthday') %></th>
        <td><%= @user.birthday %></td>
    </tr>
    <tr>
        <th><%= User.human_attribute_name('gender') %></th>
        <td><%= @user.gender.text %></td>
    </tr>
    <tr>
        <th><%= User.human_attribute_name('weight') %></th>
        <td><%= @user.weight %></td>
    </tr>
    <tr>
        <th><%= User.human_attribute_name('height') %></th>
        <td><%= @user.height %></td>
    </tr>
    <tr>
        <th><%= User.human_attribute_name('calorie_of_day') %></th>
        <td><%= @user.calorie_of_day %></td>
    </tr>
  </tbody>
</table>
