<% provide(:title, "Sign in") %>
<h1 class="text-center text-white session_title">Sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 session_area">

    <div class="field">
      <!--<%= f.label :email %>-->
      <%= f.text_field :email, :placeholder => "mail :" %>
    </div>

    <div class="field">
      <!--<%= f.label :password %>-->
      <%= f.password_field :password, :placeholder => "password :" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign in", class: "btn btn-block" %>
    </div>
 
    <!--<p>New user? <%= link_to "Sign up now!", new_user_registration_path %></p>-->
  </div>
</div>
<% end %>