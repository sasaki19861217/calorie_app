<% provide(:title, "Edit user") %>
<h1 class="page-title text-white"><%= t 'users.edit.title' %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row">
    <div class="col-xs-12">
  
      <%= render 'shared/error_messages', object: f.object %>
    
      <div class="field">
        <%= f.label :name, class: "control-label text-white" %>
        <%= f.text_field :name, autofocus: true, class: "form-control", :placeholder => "ニックネーム可 :" %>
      </div>

      <div class="field">
        <%= f.label :birthday, class: "control-label text-white" %>
        <%= f.date_field :birthday, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :weight, class: "control-label text-white" %>
        <%= f.number_field :weight, autofocus: true, class: "form-control", :placeholder => "任意入力 :" %>
      </div>

      <div class="field">
        <%= f.label :height, class: "control-label text-white" %>
        <%= f.number_field :height, autofocus: true, class: "form-control", :placeholder => "任意入力 :" %>
      </div>

      <div class="field">
        <%= f.label :gender, class: "control-label text-white" %>
        <%= f.select :gender, User.gender.options, {}, {class: "form-control"} %>
      </div>

      <div class="field">
        <%= f.label :calorie_of_day, class: "control-label text-white" %>
        <%= f.number_field :calorie_of_day, autofocus: true, class: "form-control", :placeholder => "任意入力 :" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-white">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :new_password, class: "control-label text-white" %> <i class="text-white">(パスワードを変更する場合のみ記入。)</i>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, class: "control-label text-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    
      <div class="field">
        <%= f.label :current_password, class: "control-label text-white" %> <i class="text-white">(現在のパスワードを入力)</i>
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control", :placeholder => "変更した項目がある場合入力 :" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
        <div class="actions">
          <%= f.submit "更新する", class: "btn btn-block" %>
        </div>
    </div>
  </div>
<% end %>

